<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCDF"
    tools:context=".UserInfoConfigActivity">

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Username Row -->
    <LinearLayout
        android:id="@+id/row_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter username"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- Password Row -->
    <LinearLayout
        android:id="@+id/row_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/row_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- WiFi Name Row -->
    <LinearLayout
        android:id="@+id/row_wifiname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/row_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="WiFi Name"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/edit_wifiname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter WiFi name"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- WiFi Password Row -->
    <LinearLayout
        android:id="@+id/row_wifipassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/row_wifiname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="WiFi Password"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/edit_wifipassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter WiFi password"
            android:inputType="textPassword"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- IP Address Row -->
    <LinearLayout
        android:id="@+id/row_IPAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/row_wifipassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="IP Address"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/edit_IPAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="000.000.000.000:0000"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- Save Button -->
    <android.widget.Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/btn_effect"
        app:layout_constraintTop_toBottomOf="@id/row_IPAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- reset Button -->
    <android.widget.Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/btn_effect"
        app:layout_constraintTop_toBottomOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
