<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F0"
    tools:context=".UserInfoConfigActivity">

    <!-- Username Row -->

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="100dp"
        android:text="UserInfo"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/row_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="50dp">



        <EditText
            android:id="@+id/edit_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter username"
            android:backgroundTint="#FFF"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- Password Row -->
    <LinearLayout
        android:id="@+id/row_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/row_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp">

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:backgroundTint="#FFF"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- WiFi Name Row -->
    <LinearLayout
        android:id="@+id/row_wifiname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/row_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp">


        <EditText
            android:id="@+id/edit_wifiname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter WiFi name"
            android:backgroundTint="#FFF"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- WiFi Password Row -->
    <LinearLayout
        android:id="@+id/row_wifipassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/row_wifiname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp">



        <EditText
            android:id="@+id/edit_wifipassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter WiFi password"
            android:inputType="textPassword"
            android:backgroundTint="#FFF"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- IP Address Row -->
    <LinearLayout
        android:id="@+id/row_IPAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/row_wifipassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp">

        <EditText
            android:id="@+id/edit_IPAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Ip Address"
            android:backgroundTint="#FFF"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />
    </LinearLayout>

    <!-- Location Data Row -->
    <LinearLayout
        android:id="@+id/row_Location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/row_IPAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp">

        <EditText
            android:id="@+id/edit_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Location"
            android:backgroundTint="#FFF"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC" />

        <android.widget.Button
            android:id="@+id/btn_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Set"
            android:textColor="#FFF"
            android:background="@drawable/btn_effect_1"
            android:layout_marginEnd="4dp" />
    </LinearLayout>

    <!-- Buttons Row -->
    <LinearLayout
        android:id="@+id/row_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/row_Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.widget.Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Info"
            android:textColor="#FFF"
            android:background="@drawable/btn_effect_1"
            android:layout_marginEnd="15dp" />

        <android.widget.Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFF"
            android:text="Delete Info"
            android:background="@drawable/btn_effect_1"
            android:layout_marginStart="15dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
